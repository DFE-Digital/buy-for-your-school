<%= render ActivityLog::HistoryItemComponent.new(by:, date:) do |component| %>
  <% component.with_title do %>
    <% if contact %>
      Contact added: <%= link_to contact_name, frameworks_provider_contact_path(contact, back_to: current_url_b64), class: "govuk-link", "data-turbo" => false %>
    <% else %>
      Contact removed: <%= unassigned_contact_name %>
    <% end %>
  <% end %>
<% end %>
