<div
  id="<%= container_id %>"
  data-component="autocomplete"
  data-autocomplete-label-text="<%= label_text %>"
  data-autocomplete-label-class="<%= defined?(label_class) ? label_class : "" %>"
  data-autocomplete-element-id="<%= element_id %>"
  data-autocomplete-element-name="<%= element_name %>"
  data-autocomplete-hidden-element-name="<%= defined?(hidden_element_name) ? hidden_element_name : "" %>"
  data-autocomplete-template-suggestion="<%= template_suggestion %>"
  data-autocomplete-template-input="<%= value_field %>"
  data-autocomplete-template-hidden-input="<%= defined?(hidden_value_field) ? hidden_value_field : "" %>"
  data-autocomplete-query-url="<%= query_url %>"
  data-autocomplete-default-value="<%= defined?(default_value) ? default_value : "" %>">
  <% if defined?(hidden_element_name) %>
    <input
      type="hidden"
      name="<%= hidden_element_name %>"
      value="<%= defined?(default_hidden_value) ? default_hidden_value : "" %>" />
  <% end %>
</div>
<noscript>
  <%= yield %>
</noscript>
