<% if solutions.present? %>
  <ul class="provider-expires chevron-card-list">
    <% solutions.each do |solution| %>
      <li class="chevron-card">
        <div class="chevron-card__wrapper">
          <p class="govuk-body-m  govuk-!-margin-bottom-1 govuk-!-font-weight-bold">
            <%= govuk_link_to solution.title, category_solution_path(slug: solution.slug, category_slug: category_slug), class: "govuk-link chevron-card__link" %>
          </p>
          <p class="govuk-body-m chevron-card__description govuk-!-margin-top-2">
            <%= solution.description %>
          </p>
          <%= render partial: "shared/provider_and_expires", locals: { solution: solution } %>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>
