<%= form.hidden_field :phone_number, value: form.object.phone_number %>
<%= form.hidden_field :journey_id, value: form.object.journey_id %>
<%= form.hidden_field :category_id, value: form.object.category_id %>

<%= form.govuk_text_area :message_body,
      autofocus: true,
      class: "govuk-textarea",
      rows: 5,
      caption: { text: I18n.t("support_requests.caption.message"), size: "l" },
      label: { text: I18n.t("support_requests.label.message"), size: "l" },
      hint: { text: I18n.t("support_requests.hint.message") }
    %>
