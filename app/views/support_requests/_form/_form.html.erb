<%= form_with model: support_request, url: url do |form| %>

  <span class="govuk-caption-l"><%= I18n.t("support.requests.sections.about_your_school.heading") %></span>
  <div class="govuk-form-group">
    <h1 class="govuk-label-wrapper">
      <%= form.label :school_name, I18n.t("support.requests.sections.about_your_school.name_label"), class: "govuk-label govuk-label--l" %>
    </h1>
    <div id="school-name-hint" class="govuk-hint">
      <%= I18n.t("support.requests.sections.about_your_school.name_hint") %>
    </div>
    <%= form.text_field :school_name, class: "govuk-input" %>
  </div>

  <span class="govuk-caption-l"><%= I18n.t("support.requests.sections.about_your_school.heading") %></span>
  <div class="govuk-form-group">
    <h1 class="govuk-label-wrapper">
      <%= form.label :school_urn, I18n.t("support.requests.sections.about_your_school.urn_label"), class: "govuk-label govuk-label--l" %>
    </h1>
    <div id="school-urn-hint" class="govuk-hint">
      <%= I18n.t("support.requests.sections.about_your_school.urn_hint") %>
    </div>
    <%= form.text_field :school_urn, class: "govuk-input" %>
  </div>

  <span class="govuk-caption-l"><%= I18n.t("support.requests.sections.about_your_request.heading") %></span>
  <div class="govuk-form-group">
    <h1 class="govuk-label-wrapper">
      <%= form.label :specification_ids, I18n.t("support.requests.sections.about_your_request.specification_ids_label"), class: "govuk-label govuk-label--l" %>
    </h1>
    <div id="specification-ids-hint" class="govuk-hint">
      <%= I18n.t("support.requests.sections.about_your_request.specification_ids_hint") %>
    </div>
    <% current_user.journeys.all.each do |journey| %>
      <%= form.govuk_radio_button :journey_id, journey.id, label: { text: journey.created_at.strftime("%e %B %Y") }, hint: { text: journey.category.title } %>
    <% end %>
  </div>

  <span class="govuk-caption-l"><%= I18n.t("support.requests.sections.about_your_request.heading") %></span>
  <div class="govuk-form-group">
    <h1 class="govuk-label-wrapper">
      <%= form.label :category_id, I18n.t("support.requests.sections.about_your_request.category_ids_label"), class: "govuk-label govuk-label--l" %>
    </h1>
    <% Category.all.each do |category| %>
      <%= form.govuk_radio_button :category_id, category.id, label: { text: category.title }, hint: { text: category.description } %>
    <% end %>
  </div>

  <span class="govuk-caption-l"><%= I18n.t("support.requests.sections.about_your_request.heading") %></span>
  <div class="govuk-form-group">
    <h1 class="govuk-label-wrapper">
      <%= form.label :message, I18n.t("support.requests.sections.about_your_request.message_label"), class: "govuk-label govuk-label--l" %>
    </h1>
    <div id="message-hint" class="govuk-hint">
      <%= I18n.t("support.requests.sections.about_your_request.message_hint") %>
    </div>
    <%= form.text_area :message, class: "govuk-textarea", rows: 5 %>
  </div>

  <%= form.submit I18n.t("generic.button.next"), class: "govuk-button", role: "button" %>
<% end %>