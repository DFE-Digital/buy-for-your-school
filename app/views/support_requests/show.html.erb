<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l"><%= I18n.t("support.requests.sections.send_your_request") %></h1>
    <h2 class="govuk-heading-m"><%= I18n.t("support.requests.sections.about_you.heading") %></h2>

    <dl class="govuk-summary-list">
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          Your name
        </dt>
        <dd class="govuk-summary-list__value">
          <%= @current_user.full_name %>
        </dd>
        <dd class="govuk-summary-list__actions">
          <%= link_to I18n.t("generic.button.change_answer"), edit_user_path(current_user), class: "govuk-link" %>
        </dd>
      </div>
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          Your phone number
        </dt>
        <dd class="govuk-summary-list__value">
          <%= @current_user.phone_number %>
        </dd>

        <dd class="govuk-summary-list__actions">
          <%= link_to I18n.t("generic.button.change_answer"), edit_user_path(current_user), class: "govuk-link" %>
        </dd>
      </div>
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          Your email address
        </dt>
        <dd class="govuk-summary-list__value">
          <%= @current_user.email %>
        </dd>
        <dd class="govuk-summary-list__actions">
          <%= link_to I18n.t("generic.button.change_answer"), edit_user_path(current_user), class: "govuk-link" %>
        </dd>
      </div>
    </dl>

    <h2 class="govuk-heading-m"><%= I18n.t("support.requests.sections.about_your_request.heading") %></h2>

    <dl class="govuk-summary-list">
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          <%= I18n.t("support.requests.sections.about_your_request.category_ids_label") %>
        </dt>
        <dd class="govuk-summary-list__value">
          <%= @support_request.category&.title %>
        </dd>
        <dd class="govuk-summary-list__actions">
          <%= link_to I18n.t("generic.button.change_answer"), edit_user_support_request_path(@support_request), class: "govuk-link" %>
        </dd>
      </div>
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          Description of problem
        </dt>
        <dd class="govuk-summary-list__value">
          <%= @support_request.message %>
        </dd>
        <dd class="govuk-summary-list__actions">
          <%= link_to I18n.t("generic.button.change_answer"), edit_user_support_request_path(@support_request), class: "govuk-link" %>
        </dd>
      </div>
      <div class="govuk-summary-list__row">
        <dt class="govuk-summary-list__key">
          Attached specifications
        </dt>
        <dd class="govuk-summary-list__value">
          <%= @support_request.journey&.created_at&.strftime("%e %B %Y") %>
          <br>
          <%= @support_request.journey&.category&.title %>
        </dd>
        <dd class="govuk-summary-list__actions">
          <%= link_to I18n.t("generic.button.change_answer"), edit_user_support_request_path(@support_request), class: "govuk-link" %>
        </dd>
      </div>
    </dl>

    <p class="govuk-body">
      <%= I18n.t("support.requests.confirm.timescale") %>
    </p>

    <%= link_to I18n.t("support.requests.buttons.send"), new_user_support_request_path(current_user),
                class: "govuk-button", role: "button" %>

  </div>
</div>
