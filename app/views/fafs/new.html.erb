<% if @faf_form.step == 1 %>
  <%= link_to I18n.t("generic.button.back"), fafs_path, class: "govuk-back-link"%>
<% elsif @faf_form.step == 2 %>
  <%= link_to I18n.t("generic.button.back"), sign_out_path, method: :delete, class: "govuk-back-link"%>
<% else %>
  <%= link_to I18n.t("generic.button.back"), fafs_path(@faf, faf_form: @faf_form.to_h.merge(step: @faf_form.step, dsi: @faf_form.dsi, back: true)), method: :post, class: "govuk-back-link"  unless @faf_form.step == 1 %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= render "fafs/steps/form", path: fafs_path, verb: :post %>
  </div>
</div>
