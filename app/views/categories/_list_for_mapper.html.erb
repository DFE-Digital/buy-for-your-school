<% if @categories.any? %>
  <%= form_with model: @category_input, url: categories_new_journey_mapper_path do |f| %>
    <%= f.hidden_field :category_id, value: nil %>
    <%= f.govuk_radio_buttons_fieldset(:category_id, legend: { size: "l", text: I18n.t("journey_map.category_selection_header") }) do %>
        <div class="govuk-hint">
          <%= I18n.t("categories.support_info") %>
        </div>
        <% @categories.each do |category| %>
          <%= f.govuk_radio_button :category_id, category.id, label: { text: category.title }, hint: { text: category.description } %>
        <% end %>
    <% end %>
    <%= f.submit I18n.t("generic.button.next"), class: "govuk-button" %>
  <% end %>
<% else %>
  <h1 class="govuk-heading-l"><%= I18n.t("categories.not_found") %></h1>
<% end %>
