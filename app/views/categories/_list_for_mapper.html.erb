<% if @categories.any? %>
  <%= form_with url: journey_map_path(:category_id), method: :get do |f| %>
    <%= f.govuk_radio_buttons_fieldset(:category_id, legend: { size: "l", text: I18n.t("journey_map.category_selection_header") }) do %>
        <div class="govuk-hint">
          <%= I18n.t("categories.support_info") %>
        </div>
        <% @categories.each_with_index do |category, index| %>
          <%= f.govuk_radio_button :category_id, category.id, label: { text: category.title }, hint: { text: category.description }, checked: index.zero? %>
        <% end %>
    <% end %>
    <%= f.submit I18n.t("generic.button.next"), class: "govuk-button", name: nil %>
  <% end %>
<% else %>
  <h1 class="govuk-heading-l"><%= I18n.t("categories.not_found") %></h1>
<% end %>
