<%= content_for :title, I18n.t("categories.header") %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <% if @categories.none? %>
      <h1 class="govuk-heading-l"><%= I18n.t("categories.not_found") %></h1>      
    <% else %>
      <%= form_with url: journeys_path do |f| %>
        <%= f.govuk_radio_buttons_fieldset(:category_slug, legend: { size: "l", text: I18n.t("categories.header") }) do %>
            <% @categories.each_with_index do |category, index| %>
              <%= f.govuk_radio_button :category, category.slug, label: { text: category.title }, hint: { text: category.description }, checked: index.zero? %>
            <% end %>
        <% end %>
        <%= f.submit I18n.t("generic.button.next"), class: "govuk-button" %>
      <% end %>
    <% end %>
  </div>
</div>
