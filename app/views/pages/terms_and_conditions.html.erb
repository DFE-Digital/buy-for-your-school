<%= content_for :title, @title %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <div class="md-override">
      <%= @body.html_safe %>
      <p class="govuk-body-s">Last updated <%= @time_stamp %></p>
    </div>
  </div>
  <div class="govuk-grid-column-one-third">
    <h2 class="govuk-heading-m">Related content</h2>
    <ul class="govuk-list govuk-list--none">
      <li class="govuk-body govuk-!-font-weight-bold">
        <%= link_to "Terms and conditions", terms_and_conditions_path, class: "govuk-link" %>
      </li>
      <li>
        <%= link_to "Privacy notice", privacy_path, class: "govuk-link" %>
      </li>
      <li>
        <%= link_to "Accessibility statement", accessibility_path, class: "govuk-link" %>
      </li>
    </ul>
  </div>
</div>
