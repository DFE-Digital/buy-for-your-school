<%= content_for :title, I18n.t("exit_survey.title") %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-three-quarters">

    <%= form_with model: @form, scope: :satisfaction_reason_form, url: exit_survey_satisfaction_reason_path, method: :patch do |form| %>
    <%= form.govuk_error_summary %>   

      <div class="govuk-form-group">
        <fieldset class="govuk-fieldset">
          <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
          <h1 class="govuk-fieldset__heading"><%= I18n.t("exit_survey.satisfaction_reason.question", previous_response: @exit_survey_response.previous_satisfaction_response) %></h1>
          </legend>
          
          <%= form.govuk_text_area :satisfaction_text,
            class: "govuk-textarea",
            rows: 5,
            label: nil
          %>
        </div>  

      <%= form.submit I18n.t("exit_survey.continue"), class: "govuk-button" %>
    <% end %>
  </div>
</div>

