<%= content_for :title, I18n.t("exit_survey.title") %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l">
      <%= I18n.t("exit_survey.title") %>
    </h1>

    <p class="govuk-body">
      <%= I18n.t("exit_survey.start.body", ref: @exit_survey_response.case.ref).html_safe %>
    </p>

    <%= link_to I18n.t("exit_survey.continue"), edit_exit_survey_satisfaction_path, class: "govuk-button", role: "button" %>

    <p class="govuk-body">
      <%= link_to I18n.t("exit_survey.start.privacy_policy"), "/privacy", class: "govuk-link" %>
    </p>
  </div>
</div>
