<%= content_for :title, I18n.t("exit_survey.title") %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @form, scope: :satisfaction_form, url: exit_survey_satisfaction_path, method: :patch do |form| %>
      <%= form.govuk_error_summary %> 

      <%= form.hidden_field :satisfaction_level, value: form.object.satisfaction_level %> 
            
      <%= form.govuk_radio_buttons_fieldset :satisfaction_level, legend: { text: I18n.t("exit_survey.satisfaction.question"), size: "l" } do %>
        <% form.object.satisfaction_options.each do |option| %>
          <%= form.govuk_radio_button :satisfaction_level, option, label: { text: I18n.t("exit_survey.satisfaction.options.#{option}") } %>
        <% end %>
      <% end %>

      <%= form.submit I18n.t("exit_survey.continue"), class: "govuk-button" %>
    <% end %>
  </div>
</div>
