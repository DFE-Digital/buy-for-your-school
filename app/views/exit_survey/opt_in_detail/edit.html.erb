<%= content_for :title, I18n.t("exit_survey.title") %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-three-quarters">

    <%= form_with model: @form, scope: :opt_in_detail_form, url: exit_survey_opt_in_detail_path, method: :patch do |form| %>
    <%= form.govuk_error_summary %>   

      <div class="govuk-form-group">
        <fieldset class="govuk-fieldset">
          <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
          <h1 class="govuk-fieldset__heading"><%= I18n.t("exit_survey.opt_in.detail.prompt") %></h1>
          </legend>
          <p class="govuk-body"><%= I18n.t("exit_survey.opt_in.detail.text").html_safe %></p>
          
          <%= form.govuk_text_field :opt_in_name, label: { text: I18n.t("exit_survey.opt_in.detail.full_name") } %>
          <%= form.govuk_text_field :opt_in_email, label: { text: I18n.t("exit_survey.opt_in.detail.email_address") } %>
        </div>  

      <%= form.submit I18n.t("exit_survey.continue"), class: "govuk-button" %>
    <% end %>
  </div>
</div>

