<%= content_for :title, I18n.t("exit_survey.title") %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @form, scope: :future_support_form, url: exit_survey_future_support_path, method: :patch do |form| %>
      <%= form.govuk_error_summary %> 

      <%= form.hidden_field :future_support, value: form.object.future_support %>
          
      <%= form.govuk_radio_buttons_fieldset :future_support, legend: { text: I18n.t("exit_survey.future_support.question"), size: "l" } do %>
          <% form.object.future_support_options.each do |option| %>
            <%= form.govuk_radio_button :future_support, option, label: { text: I18n.t("exit_survey.future_support.options.#{option}") } %>
          <% end %>
      <% end %>

      <%= form.submit I18n.t("exit_survey.continue"), class: "govuk-button" %>
    <% end %>
  </div>
</div>
