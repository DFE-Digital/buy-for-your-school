<%= content_for :title, @current_task.title %>
<%= link_to I18n.t("generic.button.back"), journey_path(@journey), class: "govuk-back-link" %>

<h1 class="govuk-heading-xl"><%= @task.title %></h1>

<dl class="govuk-summary-list">
  <% @steps.each do |step| %>
    <% if step.question? %>
      <%= render "answer", step: step %>
    <% end %>
  <% end %>
</dl>


<% if @current_task.next_unanswered_step_id %>
  <%= link_to I18n.t("task.button.continue"), journey_step_path(@journey, @current_task.next_unanswered_step_id), class: "govuk-button" %>
<% elsif @next_task&.next_unanswered_step_id %>
  <%= link_to I18n.t("task.button.next"), journey_step_path(@journey, @next_task.next_unanswered_step_id), class: "govuk-button" %>
<% end %>

<br />
<%= link_to I18n.t("task.button.back"), journey_path(@journey), class: "govuk-back-link" %>
