<%= content_for :title, I18n.t("support.management.all_cases_surveys.header") %>

<div class="govuk-breadcrumbs">
  <ol class="govuk-breadcrumbs__list">
    <li class="govuk-breadcrumbs__list-item">
      <%= link_to I18n.t("support.management.base.header"), support_management_path, class: "govuk-breadcrumbs__link" %>
    </li>
    <li class="govuk-breadcrumbs__list-item">
      <%= link_to I18n.t("support.management.all_cases_surveys.header"), support_management_all_cases_surveys_path, class: "govuk-breadcrumbs__link" %>
    </li>
  </ol>
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with scope: :eligible_cases_form, url: support_management_all_cases_surveys_path, method: :post do |form| %>
      <%= form.govuk_text_area :eligible_cases,
        class: "govuk-textarea",
        rows: 5,
        label: { text: I18n.t("support.management.all_cases_surveys.eligible_cases.label"), size: "l" },
        hint: { text: I18n.t("support.management.all_cases_surveys.eligible_cases.hint") }
      %>

      <%= form.submit I18n.t("support.management.all_cases_surveys.eligible_cases.send"), class: "govuk-button" %>
    <% end %>
  </div>
</div>
