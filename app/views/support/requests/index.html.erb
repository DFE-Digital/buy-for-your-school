<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">

    <h1 class="govuk-heading-l">
      <%= I18n.t("support.requests.start.h1_heading") %>
    </h1>

    <p class="govuk-body">
      <%= I18n.t("support.requests.start.p_intro_1") %>
    </p>

    <p class="govuk-body">
      <%= I18n.t("support.requests.start.p_intro_2") %>
    </p>

    <a href="<%= new_support_request_path %>" role="button" draggable="false" class="govuk-button govuk-button--start govuk-!-margin-top-2 govuk-!-margin-bottom-8" data-module="govuk-button">
      <%= I18n.t("support.requests.buttons.start") %>
      <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" role="presentation" focusable="false">
        <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
      </svg>
    </a>

    <h2 class="govuk-heading-m">
      <%= I18n.t("support.requests.start.h2_heading") %>
    </h2>

    <p class="govuk-body">You can:</p>

    <ul class="govuk-list govuk-list--bullet">
      <% I18n.t("support.requests.start.you_can_list").each do |list_item| %>
        <li><%= list_item.html_safe %></li>
      <% end %>
    </ul>

  </div>
</div>
