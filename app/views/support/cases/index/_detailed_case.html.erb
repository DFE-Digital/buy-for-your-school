<tr class="govuk-table__row case-row tower-top-row">
  <td class="govuk-table__cell">
    <%= link_to kase.ref, support_case_path(kase.id, back_to: current_url_b64), class: "govuk-link--no-visited-state", "target" => "_top" %>
  </td>

  <td class="govuk-table__cell">
    <div class="ellipsis-overflow col-organisation">
      <%= link_to kase.organisation_name, support_case_path(kase.id, back_to: current_url_b64), class: "govuk-link--no-visited-state", title: kase.organisation_name, "target" => "_top" %>
    </div>
  </td>

  <td class="govuk-table__cell">
    <%= kase.category.title %>
  </td>

  <td class="govuk-table__cell case-status">
    <%= render "support/cases/status_badge", kase: %>
  </td>

  <td class="govuk-table__cell">
    <%= kase.agent_name %>
  </td>

  <td class="govuk-table__cell">
    <span title="<%= kase.last_updated_at %>"><%= simple_distance_of_time_in_words(kase.last_updated_at, Time.zone.now, scope: "support.towers.last_updated_steps.datetime.distance_in_words") %> ago</span>
  </td>

  <td class="govuk-table__cell">
    <%= link_to "Add note", new_support_case_interaction_path(kase, option: :note, back_to: current_url_b64), class: "govuk-link--no-visited-state", "target" => "_top" %>
  </td>
</tr>

<tr class="govuk-table__row tower-bottom-row">
  <td class="govuk-table__cell tower-note" colspan="7">
    <% if kase.last_case_note.present? %>
      <span><%= simple_format("Note: #{kase.last_case_note_date} - " + kase.last_case_note_body) %></span>
    <% end %>
  </td>
</tr>
