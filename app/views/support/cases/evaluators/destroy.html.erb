<h1 class="govuk-heading-l">
  <%= I18n.t("support.case_evaluators.delete_confirmation", name: @evaluator.name) %>
</h1>

<div class="actions">
  <%= link_to I18n.t("generic.button.remove"),
              support_case_evaluator_path(@evaluator, case_id: @current_case, confirm: true),
              method: :delete,
              class: "govuk-button govuk-button--warning" %>

  <%= link_to I18n.t("generic.button.cancel"),
              support_case_evaluators_path(case_id: @current_case),
              class: "govuk-button govuk-button--secondary" %>
</div>
