<%= content_for :title, I18n.t("support.case_closures.new.header") %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-l"><%= I18n.t("support.case_closures.new.header") %></h1>

    <table class="govuk-table">
      <tbody class="govuk-table__body">
        <tr class="govuk-table__row">
          <th class="govuk-table__header" scope="row" ><%= I18n.t("support.case_closures.new.table.case_id") %></th>
          <td class="govuk-table__cell"><%= @current_case.ref %></td>
        </tr>
        <tr class="govuk-table__row">
          <th class="govuk-table__header" scope="row" ><%= I18n.t("support.case_closures.new.table.organisation") %></th>
          <td class="govuk-table__cell"><%= @current_case.organisation_name %></td>
        </tr>
        <tr class="govuk-table__row">
          <th class="govuk-table__header" scope="row" ><%= I18n.t("support.case_closures.new.table.sub_category") %></th>
          <td class="govuk-table__cell"><%= @current_case.category.title %></td>
        </tr>
        <tr class="govuk-table__row">
          <th class="govuk-table__header" scope="row" ><%= I18n.t("support.case_closures.new.table.contact_email") %></th>
          <td class="govuk-table__cell"><%= @current_case.email %></td>
        </tr>
        <tr class="govuk-table__row">
          <th class="govuk-table__header" scope="row" ><%= I18n.t("support.case_closures.new.table.date_received") %></th>
          <td class="govuk-table__cell"><%= @current_case.received_at %></td>
        </tr>
        <tr class="govuk-table__row">
          <th class="govuk-table__header" scope="row" ><%= I18n.t("support.case_closures.new.table.last_updated") %></th>
          <td class="govuk-table__cell"><%= @current_case.last_updated_at %></td>
        </tr>
      </tbody>
    </table>

    <p class="govuk-body">
      <%= I18n.t("support.case_closures.new.body") %>
    </p>

    <br>

    <div class="govuk-button-group">
      <%= link_to I18n.t("support.case_closures.new.close"), support_case_closure_path(@current_case), method: :post, class: "govuk-button govuk-button--warning", role: "button" %>
      <%= link_to I18n.t("support.case_closures.new.cancel"), @back_url, class: "govuk-link" %>
    </div>
  </div>
</div>
