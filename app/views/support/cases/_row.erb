<tr class="govuk-table__row">
  <td class="govuk-table__cell">
    <%= link_to kase.ref, support_case_path(kase.id), class: "govuk-link--no-visited-state" %>
  </td>

  <td class="govuk-table__cell">
    <%= link_to kase.organisation_name, support_case_path(kase.id), class: "govuk-link--no-visited-state" %>
  </td>

  <td class="govuk-table__cell"><%= kase.category.title %></td>

  <td class="govuk-table__cell">
    <strong class="govuk-tag govuk-tag--green">
      <%= I18n.t("support.case.label.state_#{kase.state.downcase}") %>
    </strong>
  </td>

  <% case tab %>
  <% when :all_cases %>
    <td class="govuk-table__cell"><%= kase.agent_name %></td>
    <td class="govuk-table__cell"><%= kase.last_updated_at %></td>
  <% when :my_cases %>
    <td class="govuk-table__cell"><%= kase.last_updated_at %></td>
  <% when :new_cases %>
    <td class="govuk-table__cell"><%= kase.received_at %></td>
  <% end %>
</tr>
