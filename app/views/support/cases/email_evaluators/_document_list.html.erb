<div class="govuk-form-group govuk-!-static-margin-bottom-8">
  <h2 class="govuk-heading-m"><%= I18n.t("support.cases.email_evaluators.documents") %></h2>

  <dl class="govuk-summary-list">
    <% @documents.each do |document| %>
      <div class="govuk-summary-list__row">
        <dd class="govuk-summary-list__value">
          <%= link_to document.file_name, support_document_download_path(@current_case, document_type: document.class, document_id: document.id), method: :put, class: "govuk-link" %>
        </dd>
      </div>
    <% end %>
  </dl>

</div>
