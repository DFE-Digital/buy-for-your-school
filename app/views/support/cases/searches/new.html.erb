<%= form_with model: @form, scope: :search_case_form, url: portal_case_search_index_path, method: :get do |form| %>
  <%= form.govuk_text_field :search_term,
                            label: { text: I18n.t("support.case.search.heading"), tag: "h1", size: "l" },
                            hint:  { text: I18n.t("support.case.search.hint") }
  %>

  <%= form.submit I18n.t("support.generic.search"), class: "govuk-button", role: "button" %>
<% end %>
