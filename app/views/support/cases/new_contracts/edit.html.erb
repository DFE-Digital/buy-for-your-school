<h1 class="govuk-heading-l"><%= I18n.t("support.case_contract.new.edit.header") %></h1>

<%= form_with model: @case_contracts_form, scope: :case_contracts_form, url: support_case_new_contract_path(@current_case), method: :patch do |form| %>
