<%= turbo_frame_tag "case-files-frame" do %>
  <div class="govuk-tabs__panel govuk-tabs__panel--hidden" id="case-files">
    <% if @case_files.any? %>
      <h2 class="govuk-heading-l">Case files</h2>
      <%= render "support/cases/files/table", attachments: @case_files %>
      <%= render "components/pagination", records: @case_files, pagination_params: { anchor: "files" } %>
    <% end %>
  </div>
<% end %>
