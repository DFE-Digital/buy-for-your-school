<!-- confirm school (5) -->

<%= form.hidden_field :dsi %>
<%= form.hidden_field :first_name, value: form.object.first_name %>
<%= form.hidden_field :last_name, value: form.object.last_name %>
<%= form.hidden_field :email, value: form.object.email %>
<%= form.hidden_field :school_urn, value: form.object.school_urn %>

<%= content_for :title, I18n.t("faf.confirm_school.title") %>

<span class="govuk-caption-l"><%= I18n.t("faf.confirm_school.caption") %></span>
<h1 class="govuk-heading-l"><%= I18n.t("faf.confirm_school.heading") %></h1>

<dl class="govuk-summary-list">
  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <%= I18n.t("faf.confirm_school.summary.name_and_address") %>
    </dt>
    <dd class="govuk-summary-list__value">
      <%= @organisation.name %>,<br>
      <%= @organisation.formatted_address %>
    </dd>
  </div>
  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <%= I18n.t("faf.confirm_school.summary.local_authority") %>
    </dt>
    <dd class="govuk-summary-list__value">
      <%= @organisation.local_authority %>
    </dd>
  </div>
  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <%= I18n.t("faf.confirm_school.summary.headteacher") %>
    </dt>
    <dd class="govuk-summary-list__value">
      <%= @organisation.contact %>
    </dd>
  </div>
  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <%= I18n.t("faf.confirm_school.summary.phase") %>
    </dt>
    <dd class="govuk-summary-list__value">
      <%= @organisation.phase %>
    </dd>
  </div>
  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <%= I18n.t("faf.confirm_school.summary.school_type") %>
    </dt>
    <dd class="govuk-summary-list__value">
      <%= @organisation.establishment_type.name %>
    </dd>
  </div>
  <div class="govuk-summary-list__row">
    <dt class="govuk-summary-list__key">
      <%= I18n.t("faf.confirm_school.summary.id") %>
    </dt>
    <dd class="govuk-summary-list__value">
      <%= I18n.t("faf.confirm_school.summary.urn") %>: <%= @organisation.urn %><br>
      <%= I18n.t("faf.confirm_school.summary.dfe_number") %>: <%= @organisation.number %><br>
      <%= I18n.t("faf.confirm_school.summary.ukprn") %>: <%= @organisation.ukprn %>
    </dd>
  </div>
</dl>

<%= form.govuk_radio_buttons_fieldset nil do %>
  <div class="govuk-radios">
    <%= form.govuk_radio_button :choice, "yes", label: { text: I18n.t("faf.confirm_school.choice.continue") } %>
    <%= form.govuk_radio_button :choice, "no", label: { text: I18n.t("faf.confirm_school.choice.go_back") } %>
  </div>
<% end %>

<%= javascript_include_tag "faf_confirm_school" %>
