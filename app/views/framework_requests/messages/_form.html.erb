<%= content_for :title, I18n.t("faf.user_query.label") %>

<%= form.hidden_field :dsi, value: form.object.dsi  %>
<%= form.hidden_field :group, value: form.object.group %>
<%= form.hidden_field :org_id, value: form.object.org_id %>
<%= form.hidden_field :first_name, value: form.object.first_name %>
<%= form.hidden_field :last_name, value: form.object.last_name %>
<%= form.hidden_field :email, value: form.object.email %>

<%= form.govuk_text_area :message_body,
  autofocus: true,
  class: "govuk-textarea",
  rows: 5,
  caption: { text: I18n.t("faf.user_query.caption"), size: "l" },
  label: { text: I18n.t("faf.user_query.label"), size: "l" },
  hint: { text: I18n.t("faf.user_query.hint") }
%>
