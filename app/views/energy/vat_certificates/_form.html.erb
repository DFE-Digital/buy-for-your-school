<%= form_with model: @form, scope: :vat_certificate_form, url: @form_url, method: :patch do |form| %>
    <%= form.govuk_error_summary %>

    <%= form.govuk_check_boxes_fieldset :vat_certificate_declared,
          legend: {text: I18n.t("energy.vat_certificate.heading"), tag: :h1, size: "l"},
          hint: -> { tag.p(I18n.t("energy.vat_certificate.sub_title"), class: "govuk-body") } do %>
      <%= form.govuk_check_box :vat_certificate_declared, 'declaration1', label: { text: I18n.t('declaration1', scope: "energy.vat_certificate.declaration") }, link_errors: true %>
      <%= form.govuk_check_box :vat_certificate_declared, 'declaration2', label: { text: I18n.t('declaration2', scope: "energy.vat_certificate.declaration") } %>
      <%= form.govuk_check_box :vat_certificate_declared, 'declaration3', label: { text: I18n.t('declaration3', scope: "energy.vat_certificate.declaration") } %>
    <% end %>

    <%= render EnergyFormButtonsComponent.new(form, routing_flags: @routing_flags) %>
<% end %>
