<%= form_with model: @form, scope: :gas_single_multi, url: @form_url, method: :patch do |form| %>
  <%= form.govuk_error_summary %>
  <%= form.hidden_field :gas_single_multi, value: form.object.gas_single_multi %>

  <%= form.govuk_radio_buttons_fieldset :gas_single_multi,
    legend: { size: "l", text: I18n.t("energy.gas_single_multi.heading"), tag: "h1" },
    hint: { text: I18n.t("energy.gas_single_multi.hint") } do %>
    <% form.object.single_multi_options.each_with_index do |option, i| %>
      <% if i.zero? %>
        <%= form.govuk_radio_button :gas_single_multi, option, label: { text: I18n.t("energy.gas_single_multi.#{option}") }, link_errors: true %>
      <% else %>
        <%= form.govuk_radio_button :gas_single_multi, option, label: { text: I18n.t("energy.gas_single_multi.#{option}") } %>
      <% end %>
    <% end %>
  <% end %>

  <%= render EnergyFormButtonsComponent.new(form, routing_flags: @routing_flags) %>
<% end %>
