<%= form_with model: @form, scope: :school_selection_form, url: energy_school_selection_path, method: :patch do |form| %>
    <%= form.govuk_error_summary %>

    <%= form.hidden_field :select_school, value: '' %>

    <%= form.govuk_radio_buttons_fieldset :select_school, legend: { text: I18n.t("energy.school_selections.heading"), tag: "h1", size: "l" } do %>
      <% @select_schools.each do |key, value|%>
        <%= form.govuk_radio_button :select_school, key, label: { text: value } %>
      <% end %>
    <% end %>

    <%= render SubmitButtonComponent.new(form) %>
<% end %>
