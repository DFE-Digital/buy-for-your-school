<%= form_with model: @form, scope: :letter_of_authorisation_form, url: energy_case_letter_of_authorisation_path, method: :patch do |form| %>
  <%= form.govuk_error_summary %>

  <%= form.govuk_check_boxes_fieldset :loa_agreed, legend: nil do %>
    <%= form.govuk_check_box :loa_agreed, 'agreement1', label: { text: I18n.t('agreement1', scope: "energy.letter_of_authorisation.agreement") }, link_errors: true %>
    <%= form.govuk_check_box :loa_agreed, 'agreement2', label: { text: I18n.t('agreement2', scope: "energy.letter_of_authorisation.agreement") } %>
    <%= form.govuk_check_box :loa_agreed, 'agreement3', label: { text: I18n.t('agreement3', scope: "energy.letter_of_authorisation.agreement") } %>
  <% end %>

  <%= render SubmitButtonComponent.new(form)%>
<% end %>
