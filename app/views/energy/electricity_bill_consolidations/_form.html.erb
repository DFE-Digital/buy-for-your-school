<%= form_with model: @form, scope: :electricity_bill_consolidation_form, url: energy_case_org_electricity_bill_consolidation_path, method: :patch do |form| %>
    <%= form.govuk_error_summary %>

    <%= form.hidden_field :electricity_bill_consolidation, value: '' %>

    <%= form.govuk_collection_radio_buttons :electricity_bill_consolidation,
          [
          OpenStruct.new(value: true, label: I18n.t("energy.electricity_bill_consolidation.radio_buttons.option_yes")),
          OpenStruct.new(value: false, label: I18n.t("energy.electricity_bill_consolidation.radio_buttons.option_no")),
          ],
          :value,
          :label,
          legend: { text: I18n.t("energy.electricity_bill_consolidation.option_heading")}
    %>

    <%= render EnergyFormButtonsComponent.new(form)%>

<% end %>
