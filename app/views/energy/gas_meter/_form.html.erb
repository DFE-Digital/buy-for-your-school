<%= form_with(model: @gas_meter_detail, url: @form_url) do |form| %>
    <%= form.govuk_error_summary %>
    <span class="govuk-caption-l"><%= @organisation_detail.name%>: <%= I18n.t("energy.gas_meter_details.title") %></span>
    <h1 class="govuk-heading-l"><%= I18n.t("energy.gas_meter_details.heading") %></h1>
    <% add_mprn_label = @onboarding_case_organisation.gas_single_multi_multi? ? I18n.t("energy.gas_meter_details.mprn_multi_label") : I18n.t("energy.gas_meter_details.mprn_label") %>

    <%= form.govuk_text_field :mprn,
      label: { text:  add_mprn_label, class: 'govuk-label govuk-label govuk-label--s', tag: "h2"},
      hint: { text: I18n.t("energy.gas_meter_details.mprn_hint") },
      width: 10 %>

    <div class="govuk-form-group">
      <h2 class="govuk-label-wrapper">
        <label class="govuk-label govuk-label--s" for="energy-gas-meter-gas-usage-field">
          <%= I18n.t("energy.gas_meter_details.gas_usage_label") %>
        </label>
      </h2>

      <div class="govuk-hint" id="energy-gas-meter-gas-usage-hint">
        <div>
          <details class="govuk-details" data-module="govuk-details">
            <summary class="govuk-details__summary">
              <span class="govuk-details__summary-text">
                <%= I18n.t("energy.gas_meter_details.gas_usage_hint_link") %>
              </span>
            </summary>
            <div class="govuk-details__text">
              <%= I18n.t("energy.gas_meter_details.gas_usage_hint").html_safe %>
            </div>
          </details>
        </div>
      </div>
      
      <div class="govuk-input__wrapper">
        <input id="energy-gas-meter-gas-usage-field" class="govuk-input govuk-input--width-5" type="text" name="energy_gas_meter[gas_usage]">
        <span class="govuk-input__suffix" aria-hidden="true">
          <%= I18n.t("energy.gas_meter_details.gas_usage_suffix") %>
        </span>
      </div>
    </div>  

    <%= render EnergyFormButtonsComponent.new(form, routing_flags: @routing_flags) %>

<% end %>
