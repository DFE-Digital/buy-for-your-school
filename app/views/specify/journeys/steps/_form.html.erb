<%= render "specify/journeys/steps/back_link" %>

<%= form_with model: @form, scope: :new_journey_form, url: path, method: verb  do |form| %>
  <%= form.govuk_error_summary %>

  <%= form.hidden_field :step, value: @form.step %>
  <%= render "specify/journeys/steps/step_#{@form.step}", form: form %>

  <%= form.submit I18n.t("generic.button.next"), class: "govuk-button", role: "button" %>
<% end %>
