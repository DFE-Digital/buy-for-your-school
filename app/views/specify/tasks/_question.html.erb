<dd class="govuk-summary-list__value">
  <% if step.answered? %>
    <%= step.response %>
  <% else %>
    <%= "-" %>
  <% end %>
</dd>
<dd class="govuk-summary-list__actions">
  <% if step.answered? %>
    <%= link_to I18n.t("generic.button.change_answer"), edit_journey_step_path(@journey, step), class: "govuk-link" %>
  <% else %>
    <%= link_to I18n.t("generic.button.change_answer"), journey_step_path(@journey, step), class: "govuk-link", id: step.contentful_type %>
  <% end %>
</dd>
