<%= content_for :title, I18n.t("errors.sign_in.unsupported_organisation.page_title") %>

<h1 class="govuk-heading-l"><%= I18n.t("errors.sign_in.unsupported_organisation.page_title") %></h1>
<p class="govuk-body"><%= I18n.t("errors.sign_in.unsupported_organisation.supported_schools") %></p>
<ul class="govuk-list govuk-list--bullet">
  <% I18n.t("errors.sign_in.unsupported_organisation.supported_schools_list").each do |item| %>
    <li><%= item %></li>
  <% end %>
</ul>
<% I18n.t("errors.sign_in.unsupported_organisation.page_body").each_with_index do |paragraph, index| %>
  <p class="govuk-body">
    <%= paragraph %>
    <% if index.zero? %>
      <%= link_to I18n.t("errors.sign_in.unsupported_organisation.link"), sign_out_path, method: :delete, class: "govuk-link" %>
    <% end %>
  </p>
<% end %>
