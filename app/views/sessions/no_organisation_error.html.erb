<%= content_for :title, I18n.t("errors.sign_in.no_organisation.page_title") %>

<h1 class="govuk-heading-l"><%= I18n.t("errors.sign_in.no_organisation.page_title") %></h1>
<% I18n.t("errors.sign_in.no_organisation.page_body").each_with_index do |paragraph, index| %>
  <p class="govuk-body">
    <%= paragraph %>
    <% if index.zero? %>
      <%= link_to I18n.t("errors.sign_in.no_organisation.link"), dsi_url(path: "/request-organisation/search"), class: "govuk-link" %>
    <% end %>
  </p>
<% end %>
