<%= content_for :title, I18n.t("customer_satisfaction_survey.title") %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @customer_satisfaction_survey, scope: :customer_satisfaction_survey, url: customer_satisfaction_surveys_research_opt_in_path, method: :patch do |form| %>
      <%= form.govuk_error_summary %>

      <%= form.govuk_radio_buttons_fieldset :research_opt_in, legend: { text: I18n.t("customer_satisfaction_survey.research_opt_in.question"), size: "l" }, hint: { text: I18n.t("customer_satisfaction_survey.research_opt_in.hint") } do %>
        <%= form.govuk_radio_button :research_opt_in, :true, label: { text: "Yes" } do %>
          <%= form.govuk_text_field :research_opt_in_email, label: { text: I18n.t("customer_satisfaction_survey.research_opt_in.email.question") }, hint: { text: I18n.t("customer_satisfaction_survey.research_opt_in.email.hint") } %>
          <%= form.govuk_text_field :research_opt_in_job_title, label: { text: I18n.t("customer_satisfaction_survey.research_opt_in.job_title.question") }, hint: { text: I18n.t("customer_satisfaction_survey.research_opt_in.job_title.hint") } %>
        <% end %>
        <%= form.govuk_radio_button :research_opt_in, :false, label: { text: "No" } %>
      <% end %>

      <%= form.submit I18n.t("generic.button.next"), class: "govuk-button" %>
    <% end %>
  </div>
</div>
