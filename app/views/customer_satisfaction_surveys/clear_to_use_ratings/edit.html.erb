<%= content_for :title, I18n.t("customer_satisfaction_survey.title") %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @customer_satisfaction_survey, scope: :customer_satisfaction_survey, url: customer_satisfaction_surveys_clear_to_use_rating_path, method: :patch do |form| %>
      <%= form.govuk_error_summary %> 
            
      <%= form.govuk_radio_buttons_fieldset :clear_to_use_rating, legend: { text: I18n.t("customer_satisfaction_survey.clear_to_use_rating.question"), size: "l" } do %>
        <% available_clear_to_use_ratings.each do |rating| %>
          <%= form.govuk_radio_button :clear_to_use_rating, rating, label: { text: rating.humanize } %>
        <% end %>
      <% end %>

      <%= form.submit I18n.t("generic.button.next"), class: "govuk-button" %>
    <% end %>
  </div>
</div>
