<%= content_for :title, I18n.t("all_cases_survey.outcome_achieved.question") %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @form, scope: :outcome_achieved_form, url: all_cases_survey_outcome_achieved_path, method: :patch do |form| %>
      <%= form.govuk_error_summary %> 

      <%= form.govuk_radio_buttons_fieldset :outcome_achieved, legend: { text: I18n.t("all_cases_survey.outcome_achieved.question"), size: "l" } do %>
        <% form.object.outcome_achieved_options.each do |option| %>
          <%= form.govuk_radio_button :outcome_achieved, option, label: { text: I18n.t("all_cases_survey.outcome_achieved.options.#{option}") } %>
        <% end %>
      <% end %>

      <%= form.submit I18n.t("generic.button.next"), class: "govuk-button" %>
    <% end %>
  </div>
</div>
