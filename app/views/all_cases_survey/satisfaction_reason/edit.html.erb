<%= content_for :title, I18n.t("all_cases_survey.satisfaction_reason.question_#{@case_state}_cases", previous_response: @previous_satisfaction_response) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @form, scope: :satisfaction_reason_form, url: all_cases_survey_satisfaction_reason_path, method: :patch do |form| %>
      <%= form.govuk_error_summary %>

      <%= form.govuk_text_area :satisfaction_text,
        class: "govuk-textarea",
        rows: 5,
        label: { text: I18n.t("all_cases_survey.satisfaction_reason.question_#{@case_state}_cases", previous_response: @previous_satisfaction_response), size: "l" }
      %>

      <%= form.submit I18n.t("generic.button.next"), class: "govuk-button" %>
    <% end %>
  </div>
</div>
