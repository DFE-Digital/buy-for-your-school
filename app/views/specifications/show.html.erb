<%= content_for :title, current_journey.category.title %>

<div class="govuk-grid-row">

  <!-- SPECIFICATION -->
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl"><%= I18n.t("journey.specification.show.header") %></h1>
    <p class="govuk-caption-l"><%= I18n.t("journey.specification.caption", name: current_journey.name)%></p>
    <br>
    <p class="govuk-body">
      <% body_link = link_to I18n.t("journey.specification.show.body.link"), journey_path(current_journey) %>
      <%= I18n.t("journey.specification.show.body.text", link: body_link).html_safe %>
    </p>
    <% unless current_journey.finished? || current_journey.all_tasks_completed? %>
      <div class="govuk-warning-text">
        <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
        <strong class="govuk-warning-text__text">
          <span class="govuk-warning-text__assistive">Warning</span>
          <%= I18n.t("journey.specification.show.draft") %>
        </strong>
      </div>
    <% end %>

    <h2 class="govuk-heading-m">
        <%= I18n.t("journey.specification.show.sub_header") %>
    </h2>

    <div class="govuk-inset-text">
      <%= link_to "Request free help and support with your specification", "/support-requests" %>
    </div>

    <article class="specification">
      <%= current_journey.specification %>
    </article>

    <%= link_to I18n.t("journey.specification.show.download.button"), download_journey_specification_path(current_journey), class: "govuk-button", role: "button" %>
  </div>
  <!-- END -->

  <!-- SIDEBAR -->
  <div class="govuk-grid-column-one-third">
    <ul>
      <li> <%= link_to I18n.t("journey.specification.show.sidebar.links")[0], "/next-steps-catering", class: "govuk-link" %> </li>
      <li> <%= link_to I18n.t("journey.specification.show.sidebar.links")[1], new_feedback_path, class: "govuk-link" %> </li>
    </ul>
  </div>
  <!-- END -->

</div>
