{
  "repository": "https://github.com/DFE-Digital/buy-for-your-school",
  "stack": "container",
  "addons": [
    "heroku-postgresql",
    "heroku-redis:hobby-dev"
  ],
  "env": {
    "SECRET_KEY_BASE": {
      "generator": "secret"
    },
    "RAILS_ENV": {
      "value": "production"
    },
    "WEB_CONCURRENCY": {
      "value": 2
    },
    "CONTENTFUL_URL": {
      "value": "cdn.contentful.com"
    },
    "CONTENTFUL_ENVIRONMENT": {
      "value": "master"
    }
  }
}
